SERIES_PROGRESS_TTL_SEC=3600
SERIES_QUEUE_ACTIVE_TTL_SEC=1800
SERIES_QUEUE_KICK_LOCK_TTL_SEC=15

# Backfill Specific
BACKFILL_DELAY_MS=10000
